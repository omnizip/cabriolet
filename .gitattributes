# Ensure binary files are never modified by Git's line ending conversion
*.cab binary
*.dat binary
*.kwj binary
*.chm binary
*.lit binary

# Ruby scripts use text mode with LF line endings
*.rb text eol=lf

# Test fixtures are binary (data files for compression testing)
spec/fixtures/cab/** binary
